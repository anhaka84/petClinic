<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane maxWidth="800.0" BorderPane.alignment="CENTER" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.Admin.AdminBookingController">
    <children>
      <AnchorPane>
         <children>
            <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <HBox prefWidth="800.0">
                     <children>
                          <Button fx:id="btnSearch" mnemonicParsing="false" prefHeight="30.0" prefWidth="60.0" styleClass="button_primary" stylesheets="@../../../../CSS/button.css" text="Search" />
                          <TextField fx:id="inputSearch" prefHeight="30.0" prefWidth="740.0" />
                     </children>
                  </HBox>
                  <TableView fx:id="tableBooking" maxWidth="800.0" stylesheets="@../../../../CSS/Table.css">
                     <columns>
                        <TableColumn fx:id="bookingId" minWidth="80.0" prefWidth="-1.0" text="Booking ID" />
                        <TableColumn fx:id="userId" minWidth="80.0" prefWidth="-1.0" text="User ID" />
                        <TableColumn fx:id="petId" minWidth="80.0" prefWidth="-1.0" text="Pet ID" />
                        <TableColumn fx:id="serviceId" minWidth="80.0" prefWidth="-1.0" text="Service ID" />
                        <TableColumn fx:id="price" minWidth="90.0" prefWidth="-1.0" text="Price" />
                        <TableColumn fx:id="bookingDate" minWidth="130.0" prefWidth="-1.0" text="Booking Date" />
                        <TableColumn fx:id="bookingTime" minWidth="130.0" prefWidth="-1.0" text="Booking Time" />
                        <TableColumn fx:id="updateDate" minWidth="130.0" prefWidth="-1.0" text="Update Date" />
                     </columns>
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </TableView>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets top="50.0" />
         </padding>
      </AnchorPane>
    </children>
</Pane>
